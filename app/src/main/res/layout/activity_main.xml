<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#353535"
        android:orientation="vertical"
        tools:context=".MainActivity">

        <include layout="@layout/item_ble_selected"
            android:id="@+id/selected"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Make Sure To Grant All Permissions!\n Make Sure to Turn on Bluetooth!\nIf you write a code, tester only searches for that device!"
            android:textColor="@color/white"
             />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:textSize="12sp"
            android:textColorHint="#888"
            android:hint="Write device code here!"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Connect"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="16dp"
            android:background="@android:drawable/screen_background_dark_transparent" />

        <TextView
            android:id="@+id/authenticate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Authenticate"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/screen_background_dark_transparent" />

        <TextView
            android:id="@+id/unlock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Unlock"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/screen_background_dark_transparent" />

        <TextView
            android:id="@+id/disconnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Disconnect"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/screen_background_dark_transparent" />

        <TextView
            android:id="@+id/getStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Get Status"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/screen_background_dark_transparent" />

        <TextView
            android:id="@+id/getBattery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center"
            android:text="Query Battery"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp"
            android:background="@android:drawable/screen_background_dark_transparent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select a device:"
            android:textColor="@color/white"
            android:padding="12dp"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/recycler"
            />

    </LinearLayout>
</layout>